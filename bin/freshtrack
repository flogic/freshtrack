#!/usr/bin/env ruby
#
#  Created on 2008-1-30.
#  Copyright (c) 2008. All rights reserved.

begin
  require 'rubygems'
rescue LoadError
  # no rubygems to load, so we fail silently
end

require 'freshtrack'

# do stuff
project = ARGV.shift

unless project
  puts "Usage: #{File.basename($0)} [project] [options]"
  exit
end

Freshtrack.init
Freshtrack.track(project, ARGV.join(' '))
